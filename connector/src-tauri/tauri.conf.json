{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nexterm Connector",
  "version": "1.0.9",
  "identifier": "dev.gnm.nexterm",
  "build": {
    "frontendDist": "../../client/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "yarn client:dev",
    "beforeBuildCommand": "yarn client:build"
  },
  "app": {
    "windows": [
      {
        "title": "Nexterm Connector",
        "width": 1450,
        "height": 900,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self' https: http: ws: wss: data: blob:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' https: http: ws: wss:; img-src 'self' https: http: data: blob:; font-src 'self' https: http: data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
